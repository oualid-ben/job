    <script>
        // ==========================================
        // VARIABLES DE PERSONNALISATION
        // ==========================================
        // Modifiez uniquement ces variables pour personnaliser votre landing page
        
        const VARIABLES = {
            // Informations personnelles
            NOM: "Oualid",
            INITIALE: "OBMS",
            EMAIL: "oualidb12@gmail.com",
            TELEPHONE: "+33783978450",
            
