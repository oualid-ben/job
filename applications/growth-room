            LIEN_CV: "https://www.canva.com/design/DAGuKUE2pKo/nxlP3MfvVjtunoTFZMzjxw/edit?utm_content=DAGuKUE2pKo&utm_campaign=designshare&utm_medium=link2&utm_source=sharebutton" // Remplacez par votre lien CV
        };
        
        // ==========================================
        // FONCTIONS D'INITIALISATION
        // ==========================================
        
        // Fonction pour remplacer les variables dans le HTML
        function initializeVariables() {
            // Remplacer le titre principal
            document.title = `Candidature ${VARIABLES.NOM} - ${VARIABLES.POSTE} chez ${VARIABLES.ENTREPRISE}`;
            
            // Remplacer dans le hero
            const heroTitle = document.querySelector('.hero-title');
            if (heroTitle) {
                heroTitle.innerHTML = `
                    Candidature de <span class="highlight">${VARIABLES.NOM}</span><br>
                    pour le poste <span class="highlight">${VARIABLES.POSTE}</span><br>
                    chez <span class="highlight">${VARIABLES.ENTREPRISE}</span>
                `;
            }
            
            const heroSubtitle = document.querySelector('.hero-subtitle');
            if (heroSubtitle) {
                heroSubtitle.innerHTML = `Une approche personnalisée et méthodique pour postuler`;
            }
            
            // Ajouter le logo de l'entreprise
            const logoContainer = document.querySelector('.logo-container');
            if (logoContainer && VARIABLES.LOGO_ENTREPRISE && VARIABLES.LOGO_ENTREPRISE !== "https://cdn.prod.website-files.com/5ec25240d032434ac53b84cc/6447e24bc04bc8700259cbcd_logo.svg") {
                logoContainer.innerHTML = `<img src="${VARIABLES.LOGO_ENTREPRISE}" alt="Logo ${VARIABLES.ENTREPRISE}" class="company-logo">`;
            }
            
            // Ajouter l'image business
            const businessImage = document.querySelector('.business-image');
            if (businessImage && VARIABLES.IMAGE_ENTREPRISE && VARIABLES.IMAGE_ENTREPRISE !== "{{Entreprise image}}") {
                businessImage.innerHTML = `<img src="${VARIABLES.IMAGE_ENTREPRISE}" alt="Business ${VARIABLES.ENTREPRISE}" class="business-img">`;
            }
            
            // Remplacer dans la vidéo
            const videoPlaceholder = document.querySelector('.video-placeholder div');
            if (videoPlaceholder) {
                videoPlaceholder.innerHTML = `
                    Vidéo personnalisée pour ${VARIABLES.ENTREPRISE}<br>
                    <small style="opacity: 0.7; font-size: 1rem;">Cliquez pour découvrir mon message</small>
                `;
            }
            
            // Remplacer les problématiques
            const problemCards = document.querySelectorAll('.problem-card p');
            if (problemCards.length >= 3) {
                problemCards[0].textContent = VARIABLES.PROBLEMATIQUE_1;
                problemCards[1].textContent = VARIABLES.PROBLEMATIQUE_2;
                problemCards[2].textContent = VARIABLES.PROBLEMATIQUE_3;
            }
            
            // Remplacer la solution
            const solutionCard = document.querySelector('.solution-card p');
            if (solutionCard) {
                solutionCard.textContent = VARIABLES.SOLUTION;
            }

            // Remplacer dans les skills
            const skillsTitle = document.querySelector('.skills-title');
            if (skillsTitle) {
                skillsTitle.innerHTML = `Ce que je peux apporter à ${VARIABLES.ENTREPRISE}`;
            }
            
            // Remplacer dans la CTA
            const ctaSubtitle = document.querySelector('.cta-subtitle');
            if (ctaSubtitle) {
                ctaSubtitle.innerHTML = `Je suis convaincu que mon profil peut apporter une réelle valeur ajoutée à ${VARIABLES.ENTREPRISE}`;
            }
            
            // Remplacer les liens
            const emailLink = document.querySelector('a[href^="mailto"]');
            if (emailLink) {
                emailLink.href = `mailto:${VARIABLES.EMAIL}?subject=Candidature%20${VARIABLES.POSTE}%20-%20${VARIABLES.ENTREPRISE}&body=Bonjour%20${VARIABLES.NOM},%0D%0A%0D%0AJ'ai%20consulté%20votre%20candidature%20pour%20le%20poste%20${VARIABLES.POSTE}%20chez%20${VARIABLES.ENTREPRISE}.%0D%0A%0D%0A`;
            }
            
            const phoneLink = document.querySelector('a[href^="tel"]');
            if (phoneLink) {
                phoneLink.href = `tel:${VARIABLES.TELEPHONE}`;
            }
        }
        
        // ==========================================
        // FONCTIONS PRINCIPALES
        // ==========================================
        
        // Scroll reveal animation
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -80px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('revealed');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.scroll-reveal').forEach(el => {
            observer.observe(el);
        });

        // Scroll to next section function
        function scrollToNext() {
            const nextSection = document.querySelector('.video-section');
            if (nextSection) {
                nextSection.scrollIntoView({ 
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        }
        function playVideo() {
            if (VARIABLES.LIEN_VIDEO && VARIABLES.LIEN_VIDEO !== "https://loom.com/votre-video") {
                window.open(VARIABLES.LIEN_VIDEO, '_blank');
            } else {
                alert('Intégrez ici votre vidéo personnalisée (Loom, YouTube, Vimeo, etc.)');
            }
        }

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Dynamic text animation
        function animateText() {
            const highlights = document.querySelectorAll('.highlight');
            highlights.forEach((highlight, index) => {
                setTimeout(() => {
                    highlight.style.animation = 'fadeInUp 0.8s ease-out forwards';
                }, index * 200);
            });
        }

        // Initialize animations
        window.addEventListener('load', () => {
            initializeVariables();
            animateText();
        });
    </script>
